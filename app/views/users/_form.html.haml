=render 'shared/errors', obj: @user
.row
  .col-mxs-12
    =form_for(@user, html: { class: "form-horizontal", role: "form" }) do |f|
      .form-group
        .control-label.col-sm-2
          =f.label :username
        .col-sm-8
          =f.text_field :username, class: 'form-control', placeholder: "Username", autofocus: true
      .form-group
        .control-label.col-sm-2
          =f.label :email
        .col-sm-8
          =f.text_field :email, class: 'form-control', placeholder: "Email address"
      -if @user.new_record?
        .form-group
          .control-label.col-sm-2
            =f.label :password
          .col-sm-8
            =f.password_field :password, class: 'form-control', placeholder: 'Password'
        .form-group
          .control-label.col-sm-2
            =f.label :password_confirmation
          .col-sm-8
            =f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation'
      .form-group
        .col-sm-10.col-sm-offset-2
          =f.submit(@user.new_record? ? 'Signup': 'Update', class: 'btn btn-primary btn-large')