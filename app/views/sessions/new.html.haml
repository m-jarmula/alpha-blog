%h1.center login

.row
  .col-mxs-12
    =form_for(:session, html: { class: "form-horizontal", role: "form" }, url: login_path) do |f|
      .form-group
        .control-label.col-sm-2
          =f.label :email
        .col-sm-8
          =f.email_field :email, class: 'form-control', placeholder: "Email address"
      .form-group
        .control-label.col-sm-2
          =f.label :password
        .col-sm-8
          =f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off"
      .form-group
        .col-sm-10.col-sm-offset-2
          =f.submit('Sign in', class: 'btn btn-primary btn-large')